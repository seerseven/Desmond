{%- case config -%}

{%- when 'theme' -%}

{% style %}

:root {
  --linkColorTransLight:{{ settings.linkColorDark }};
  --linkHoverTransLight:{{ settings.linkHoverDark }};
  --linkColorTransDark:{{ settings.linkColor }};
  --linkHoverTransDark:{{ settings.linkHover }};
}
:root[data-theme=light]{
  --switch: #222;
  --switchV: #f8f8f8;
  --textColor: {{ settings.textColor }};
  --linkColor:{{ settings.linkColor }};
  --linkHover:{{ settings.linkHover }};
  --buttonColor: {{ settings.buttonColor }};
  --buttonHover: {{ settings.buttonHover }};
  --buttonBGColor: {{ settings.buttonBGColor }};
  --buttonBGHover: {{ settings.buttonBGHover }};
  --colorMode: #fec150;
  --colorModeBG: #222222f5;
  --colorModeV:  #222222f5;
  --colorModeBGV: #fec150;
}

:root[data-theme=dark]{
  --switch: #f8f8f8;
  --switchV: #222;
  --textColor: {{ settings.textColorDark }};
  --linkColor:{{ settings.linkColorDark }};
  --linkHover:{{ settings.linkHoverDark }};
  --buttonColor: {{ settings.buttonColorDark }};
  --buttonHover: {{ settings.buttonHoverDark }};
  --buttonBGColor: {{ settings.buttonBGColorDark }};
  --buttonBGHover: {{ settings.buttonBGHoverDark }};
  --colorMode: #222222f5;
  --colorModeBG: #fec150;
  --colorModeV: #fec150;
  --colorModeBGV: #222222f5;
}
{% endstyle %}

{%- when 'header' -%}

{% style %}
:root[data-theme=light]{
--headerBG: {{ section.settings.headerBG}} ;
--headerIMG: {{ section.settings.headerIMG |  img_url: 'master'}} ;
}
:root[data-theme=dark]{
--headerBG: {{ section.settings.headerBGDark }} ;
--headerIMG: {{ section.settings.headerIMGDark |  img_url: 'master' }} ;
}
:root{
--decore-line: {{ section.settings.decoreLine }} ;
--decore-hover: {{ section.settings.decoreHover }} ;
--decore-line: {{ section.settings.decoreStyle }}rem ;
--decore-weight: {{ section.settings.decoreWeight }}rem ;
}
{% endstyle %}


{%- when 'footer' -%}
{% style %}
:root[data-theme=light]{
  --footer-bg: {{ section.settings.footerBG }};
  --footer-bottom: {{ section.settings.footerBottom }};
}

:root[data-theme=dark]{
  --footer-bg: {{ section.settings.footerBGDark }};
  --footer-bottom: {{ section.settings.footerBottomDark }};
}
{% endstyle %}

{%- endcase -%}
